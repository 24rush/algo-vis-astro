---
const { primary, secondary, text } = Astro.props;

const getClass = () => {
  let defaultClass =
    "px-3 py-2 rounded-md transition-all shadow-sm hover:bg-opacity-80 font-medium ";

  if (primary)
    return defaultClass + "text-white bg-blue-500 hover:bg-opacity-80";
  if (secondary) return defaultClass + "text-blue-600 border-blue-500 border";
  if (text) return defaultClass + "text-blue-500 hover:bg-opacity-80 shadow-md";

  return defaultClass;
};
---

<button class={getClass()} style="display: inline-flex;align-items: center;">
  <slot />
</button>

