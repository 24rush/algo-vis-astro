---
const { primary, secondary, text, id, av_class, av_modal_target } = Astro.props;

const getClass = () => {
  let defaultClass = av_class +
    " px-3 py-2 rounded-md transition-all shadow-sm hover:bg-opacity-80 font-medium ";

  if (primary)
    return defaultClass + "text-white bg-blue-500 hover:bg-opacity-80";
  if (secondary) return defaultClass + "text-white hover:bg-opacity-80 border-blue-500 border";
  if (text) return defaultClass + "text-blue-500 hover:bg-opacity-80 shadow-md";

  return defaultClass;
};
---

<button class={getClass()} style="display: inline-flex;align-items: center;" id={id} data-av-modal-target={av_modal_target}>
  <slot />
</button>

