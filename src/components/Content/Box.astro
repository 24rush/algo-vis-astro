---
let { attention, knowledge, info } = Astro.props;
---

{
    attention && (
        <div class="attn-box">
            <div class="box-pill attention-pill">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                    <line x1="12" y1="9" x2="12" y2="13" />
                    <line x1="12" y1="17" x2="12.01" y2="17" />
                </svg>
            </div>
            <slot />
        </div>
    )
}

{
    knowledge && (
        <div class="know-box">
            <div class="box-pill know-pill">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                    <polyline points="22 4 12 14.01 9 11.01" />
                </svg>
            </div>
            <slot />
        </div>
    )
}

{
    info && (
        <div class="inf-box">
            <div class="box-pill tip-pill">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <circle cx="12" cy="12" r="10" />
                    <line x1="12" y1="16" x2="12" y2="12" />
                    <line x1="12" y1="8" x2="12.01" y2="8" />
                </svg>
            </div>
            <slot />
        </div>
    )
}

<style scoped>
    :root {
        --attention-color: #FF4949;
        --know-color: #38E54D;
        --tip-color: #0079ff;
        --box-margin: 2rem 0rem 1rem 1rem;

        --border-width: 4px;
    }

    .box-pill {
        position: absolute;
        top: 0px;
        left: 0px;
        transform: translate(calc(-60%), -50%);
        padding: 6px;
        /*background-color: rgb(241 245 249 / var(--tw-bg-opacity));*/
        background-color: white;
        border-radius: 50%;
    }

    .attention-pill {
        color: var(--attention-color);
    }

    .know-pill {
        color: var(--know-color);
    }

    .tip-pill {
        color: var(--tip-color);
    }

    .attn-box {
        position: relative;
        background: #ffdd0012;
        --box-content-color: var(--attention-color);
        border-color: var(--attention-color) !important;
        padding: 10px 20px;
        margin: var(--box-margin);
        border-left: var(--border-width) solid;
    }

    .know-box {
        position: relative;
        background: #00cc880f;
        --box-content-color: var(--know-color);
        border-color: var(--know-color) !important;
        padding: 10px 20px;
        margin: var(--box-margin);
        border-left: var(--border-width) solid;
    }

    .inf-box {
        position: relative;
        background: #eaf8ffa3;
        --box-content-color: var(--tip-color);
        border-color: var(--tip-color) !important;
        padding: 10px 20px;
        margin: var(--box-margin);
        border-left: var(--border-width) solid;
    }
</style>
