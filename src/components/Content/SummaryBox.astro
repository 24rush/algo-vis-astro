---
const { title, description, show } = Astro.props;

const gpt_box_id = Math.random()
    .toString(36)
    .replace(/[^a-z]+/g, "")
    .slice(2, 10);
---

<div class="accordion accordion-flush my-2" id={"accordionFlush" + gpt_box_id}>
    <div class="accordion-item">
        <div
            class="accordion-header"
            id={"flush-heading" + gpt_box_id}
            style="display: flex;flex-direction: row;align-items: center;"
        >
            <button
                class="accordion-button collapsed scope-name-lg px-2"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target={"#flush-collapse" + gpt_box_id}
                aria-expanded="false"
                aria-controls={"flush-collapse" + gpt_box_id}
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="22"
                    height="22"
                    fill="currentColor"
                    class="bi bi-bookmarks"
                    viewBox="0 0 16 16"
                >
                    <path
                        d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v11.5a.5.5 0 0 1-.777.416L7 13.101l-4.223 2.815A.5.5 0 0 1 2 15.5V4zm2-1a1 1 0 0 0-1 1v10.566l3.723-2.482a.5.5 0 0 1 .554 0L11 14.566V4a1 1 0 0 0-1-1H4z"
                    ></path>
                    <path
                        d="M4.268 1H12a1 1 0 0 1 1 1v11.768l.223.148A.5.5 0 0 0 14 13.5V2a2 2 0 0 0-2-2H6a2 2 0 0 0-1.732 1z"
                    ></path>
                </svg>

                <div style="display: flex; flex-direction: column;">
                    <span
                        style="margin-left: 8px; font-style: normal; font-weight: 500;"
                        >{title}</span
                    >
                    {description && <span class="prompt">{description}</span>}
                </div>
            </button>
        </div>
        <div
            id={"flush-collapse" + gpt_box_id}
            class={"accordion-collapse " + (show ? "show" : "collapse")}
            aria-labelledby={"flush-heading" + gpt_box_id}
            data-bs-parent={"#accordionFlush" + gpt_box_id}
        >
            <div class="accordion-body">
                <slot />
            </div>
        </div>
    </div>
</div>

<style>
    .prompt {
        font-style: italic;
        font-size: small;
        margin-left: 0.75em;
        font-weight: 400;
    }
</style>
