---
import "bootstrap/dist/css/bootstrap.min.css";
import "../../public/assets/styles/av-wp-styles.css";
import "../../public/assets/styles/av-styles.css";
import "../styles/main.scss";

import HeadCommon from "../components/HeadCommon.astro";
import HeadSEO from "../components/HeadSEO.astro";
import Header from "../components/Header/Header.astro";
import PageContent from "../components/PageContent.astro";
import LeftSidebar from "../components/LeftSidebar.astro";
import RightSidebar from "../components/RightSidebar.astro";

import * as CONFIG from "../config";

const { content = {} } = Astro.props;
const currentPage = new URL(Astro.request.url).pathname;

const isExercisePage = currentPage.startsWith("/exercitii");
---

<html dir={content.dir ?? "ltr"} lang={content.lang ?? "en-us"} class="initial">
  <head>
    <HeadCommon />
    <HeadSEO {content} canonicalURL={new URL(Astro.url.pathname, Astro.site)} />
    <title>
      {
        content.title
          ? `${content.title} ðŸš€ ${CONFIG.SITE.title}`
          : CONFIG.SITE.title
      }
    </title>
  </head>

  <body>
    <div class="sticky z-10 w-full" id="headerBar">
      <Header currentPage={currentPage} />
    </div>
    <div class="grid" style="display: flex;">
      <div
        class="col-span-left-mobile sticky top-0 h-screen flex white-background"
      >
        <div class="ml-auto">
          <LeftSidebar currentPage={currentPage} />
        </div>
      </div>

      <main class="col-span-main-mobile py-4 px-8 pb-32 overflow-auto">
        <div>
          <PageContent content={content}>
            <slot />
          </PageContent>
        </div>
      </main>

      {
        !isExercisePage && (
          <div class="col-span-right-mobile sticky top-0 h-screen flex">
            <RightSidebar content={content} />
          </div>
        )
      }
    </div>

    <style scoped>
      .white-background {
        background-color: white;
      }

      .left-sidebar-forced {
        position: fixed !important;
        display: flex !important;
        z-index: 1;
        opacity: 1;
        top: 3.5em !important;
        height: 100% !important;
      }

      .col-span-left-mobile {
        max-width: 25%;
        display: flex !important;
        position: relative !important;
      }

      .col-span-right-mobile {
        min-width: 18%;
      }

      @media (max-width: 968px) {
        .col-span-left-mobile {
          display: none !important;
        }

        .col-span-right-mobile {
          display: none !important;
        }
      }
    </style>
    <script is:inline>
      let menuIsOpened = false;
      const menuToggle = document.querySelector("#menu__toggle");
      const leftSidebar = document.querySelector(".col-span-left-mobile");

      menuToggle.addEventListener("change", (event) => {
        if (!event.currentTarget.checked) {
          menuIsOpened = false;
          leftSidebar.classList.remove("left-sidebar-forced");
          leftSidebar.classList.add("col-span-left-mobile");
        } else {
          menuIsOpened = true;
          leftSidebar.classList.remove("col-span-left-mobile");
          leftSidebar.classList.add("left-sidebar-forced");
        }
      });

      const mql = window.matchMedia("(max-width: 968px)");

      mql.onchange = (e) => {
        if (e.matches) {
          leftSidebar.classList.add("left-sidebar-forced");
        } else {
          leftSidebar.classList.remove("left-sidebar-forced");
        }
      };

      // Auto hide header bar
      var headerBar = document.getElementById("headerBar");
      var prevScrollpos = window.pageYOffset;

      if (headerBar) {
        window.onscroll = function () {
          if (menuIsOpened == true) {
            headerBar.style.top = "0";
            return;
          }

          var currentScrollPos = window.pageYOffset;
          headerBar.style.top =
            prevScrollpos > currentScrollPos ? "0" : "-150px";
          prevScrollpos = currentScrollPos;
        };
      }
    </script>

    <script is:inline src="./../assets/scripts/bundle.js" type="text/javascript"
    ></script>

    <script
      crossorigin=""
      src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js?ver=6.1.1"
      id="js-prism_core-js"></script>
    <script
      crossorigin=""
      src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js?ver=6.1.1"
      id="js-prism_autoloader-js"></script>
    <script
      crossorigin=""
      src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.js?ver=6.1.1"
      id="js-prism_linenumbers-js"></script>
  </body>
</html>
